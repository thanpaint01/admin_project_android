<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.user.Edit">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="Edit User"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:drawablePadding="3dp"
                android:hint="Full Name"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/lineDOB"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@id/edtFullName"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_table_row1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/imgViewCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_cake_24"
                    android:drawablePadding="5dp" />

                <EditText
                    android:id="@+id/edtDay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="DD"
                    android:inputType="date|number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/edtMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="MM"
                    android:inputType="date|number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/edtYear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="YYYY"
                    android:inputType="date|number"
                    android:maxLength="4" />
            </LinearLayout>


            <RadioGroup
                android:id="@+id/lineGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDOB"
                android:layout_marginTop="4dp"
                android:layout_weight="2"
                android:background="@drawable/custom_input_fields"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Gender:"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rdoMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rdoFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/linearimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineGender"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawablePadding="3dp"
                android:inputType="textPersonName"
                android:orientation="vertical">


                <Button
                    android:id="@+id/buttonChoose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose image"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="178dp"
                    android:layout_height="178dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearimg"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="3dp"
                android:hint="Phone"
                android:inputType="phone|number" />

            <EditText
                android:id="@+id/edtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtPhoneNo"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="3dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtEmailAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="3dp"
                android:hint="Address" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/user_detail_24"
                android:drawablePadding="3dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtUsername"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="3dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtPassword"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:drawableLeft="@drawable/ic_baseline_refresh_24"
                android:drawablePadding="3dp"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <RadioGroup
                android:id="@+id/linePermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtConfirmPassword"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:background="@drawable/custom_input_fields"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Permission:"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rdoUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="User" />

                <RadioButton
                    android:id="@+id/rdoAdmin"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Admin" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/lineActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linePermission"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:background="@drawable/custom_input_fields"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Active:"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rdoActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Active" />

                <RadioButton
                    android:id="@+id/rdoBan"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ban" />

            </RadioGroup>

            <Button
                android:id="@+id/btn_edituser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineActive"
                android:layout_marginTop="48dp"
                android:text="Edit"
                android:textColor="@color/white" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>