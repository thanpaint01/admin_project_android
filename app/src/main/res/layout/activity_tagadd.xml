<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.tag.Add">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tagTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="Add Tag"
                android:textSize="25sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/addtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tagTitle"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
            <EditText
                android:id="@+id/addstorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addtag"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:hint="Storage" />
<!--            neu la price thi hien them-->
            <EditText
                android:id="@+id/addTu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addstorage"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:hint="From"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/addDen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addTu"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input_fields"
                android:hint="To"
                android:visibility="gone"
                 />



            <RadioGroup
                android:id="@+id/lineActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addDen"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:background="@drawable/custom_input_fields"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Active:"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rdoActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Active" />

                <RadioButton
                    android:id="@+id/rdoInactive"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Inactive" />

            </RadioGroup>

            <Button
                android:id="@+id/btn_addtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineActive"
                android:layout_marginTop="48dp"
                android:text="Add"
                android:textColor="@color/white" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>