<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="28dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/destitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Product Description"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/productdescription_title1"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Title1: " />

                <TextView
                    android:id="@+id/productdescription_title1product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Title1 data" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productdescription_info1"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Info1: " />

                <TextView
                    android:id="@+id/productdescription_info1product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Info1 data" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productdescription_img1"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Img1: " />

                <ImageView
                    android:id="@+id/productdescription_img1product"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_image_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productdescription_title2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Title2: " />

                <TextView
                    android:id="@+id/productdescription_title2product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Title2 data" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productdescription_info2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Info2: " />

                <TextView
                    android:id="@+id/productdescription_info2product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Info2 data" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productdescription_img2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
